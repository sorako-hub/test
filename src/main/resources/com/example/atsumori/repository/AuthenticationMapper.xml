<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.atsumori.repository.AuthenticationMapper">
	<!--  ユーザー名で認証情報を取得  -->
	<select id="selectByUsername" resultType="com.example.atsumori.entity.Authentication">
	SELECT username, password, authority, displayname
	FROM authentications
	WHERE username = #{username}
	</select>
</mapper>